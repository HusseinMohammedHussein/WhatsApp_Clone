<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingActivity">

    <Button
        android:id="@+id/btnUpdate_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/et_status_profile"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/et_username_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:textAlignment="center"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_status_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username_profile"
        android:layout_marginTop="20dp"
        android:hint="My Status"
        android:textAlignment="center"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="5dp" />

</RelativeLayout>